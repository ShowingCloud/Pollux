<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Password:</strong>
  <%= @user.password %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Address</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.addresses.each do |address| %>
      <tr>
        <td><%= address.user_id %></td>
        <td><%= address.address %></td>
        <td><%= address.balance %></td>
        <td><%= link_to 'Show', user_address_path(@user, address) %></td>
        <td><%= link_to 'Edit', edit_user_address_path(@user, address) %></td>
        <td><%= link_to 'Destroy', [@user, address], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
<%= link_to 'New Address', new_user_address_path(@user) %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
