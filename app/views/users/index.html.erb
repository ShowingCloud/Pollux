<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th rowspan="2">UUID</th>
      <th rowspan="2">Username</th>
      <th rowspan="2">Password</th>
      <th rowspan="2">Email</th>
      <th colspan="3" rowspan="2"></th>
      <th colspan="6">Addresses</th>
    </tr>
    <tr>
      <th>UUID</th>
      <th>User</th>
      <th>Address</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td rowspan="<%= user.addresses.count+1 %>"><%= user.uuid %></td>
        <td rowspan="<%= user.addresses.count+1 %>"><%= user.username %></td>
        <td rowspan="<%= user.addresses.count+1 %>"><%= user.password %></td>
        <td rowspan="<%= user.addresses.count+1 %>"><%= user.email %></td>

        <td rowspan="<%= user.addresses.count+1 %>"><%= link_to 'Show', user %></td>
        <td rowspan="<%= user.addresses.count+1 %>"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td rowspan="<%= user.addresses.count+1 %>"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <td colspan="7"><%= link_to 'New Address', new_user_address_path(user) %></td>
      </tr>

      <% user.addresses.each do |address| %>
        <tr>
          <td><%= address.uuid %></td>
          <td><%= address.user_id %></td>
          <td><%= address.address %></td>
          <td><%= address.balance %></td>
          <td><%= link_to 'Show', user_address_path(user, address) %></td>
          <td><%= link_to 'Edit', edit_user_address_path(user, address) %></td>
          <td><%= link_to 'Destroy', [user, address], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

