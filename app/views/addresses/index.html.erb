<h1>Listing addresses</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Address</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.user_id %></td>
        <td><%= address.address %></td>
        <td><%= address.balance %></td>
        <td><%= link_to 'Show', user_address_path(@user, address) %></td>
        <td><%= link_to 'Edit', edit_user_address_path(@user, address) %></td>
        <td><%= link_to 'Destroy', [@user, address], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_user_address_path(@user) %>
